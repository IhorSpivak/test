<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent" >

    <ListView
        android:id="@+id/listScreenCart"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/linearLayoutEmptyCartMessageScreenCart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        >
        <TextView
            android:id="@+id/txtEmptyCartMessageRedScreenCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/colorRed"
            android:textSize="30sp"
            android:text="@string/oops"
            android:visibility="visible"
            />
        <TextView
            android:id="@+id/txtEmptyCartMessageBlackScreenCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingRight="25dp"
            android:paddingLeft="25dp"
            android:layout_marginBottom="15dp"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="16sp"
            android:text="@string/no_items_in_cart"
            android:visibility="visible"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView1ScreenCart"
            android:src="@drawable/empty_cart_text"
            android:layout_marginBottom="20dp"
            android:visibility="gone"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView2ScreenCart"
            android:src="@drawable/empty_cart_image"
            android:layout_gravity="center_horizontal"
            android:visibility="visible"
            />

    </LinearLayout>


</RelativeLayout>
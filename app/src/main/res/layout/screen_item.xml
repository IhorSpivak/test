        <!--android:layout_height="wrap_content"-->
        <!--android:scrollbars="none"-->
        <!--android:id="@+id/title_horizontalScrollView"-->
        <!--android:fillViewport="false"-->
        <!--android:background="@color/colorGreen"-->
        <!--android:visibility="gone"-->
        <!--&gt;-->

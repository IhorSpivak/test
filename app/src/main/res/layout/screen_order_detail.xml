<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorGrayListBackground"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llFlightInformationScreenOrderDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorWhite"
            android:orientation="horizontal"
            android:weightSum="1"
            android:elevation="3dp"
            android:paddingTop="20dp">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilFlightScreenOrderDetail"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight=".45"
                android:layout_marginTop="0dp"
                app:hintTextAppearance="@style/MyHintText"
                >

                <EditText
                    android:id="@+id/edtFlightScreenOrderDetail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/colorBlack"
                    android:ems="10"
                    android:hint="Flight"
                    android:inputType="textPersonName"
                    android:theme="@style/MyEditText" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilDateScreenOrderDetail"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight=".30"
                android:layout_marginTop="0dp"
                app:hintTextAppearance="@style/MyHintText"
                >

                <EditText
                    android:id="@+id/edtDateScreenOrderDetail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/colorBlack"
                    android:ems="10"
                    android:hint="Date"
                    android:inputType="textPersonName"
                    android:theme="@style/MyEditText" />
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                android:id="@+id/tilTimeScreenOrderDetail"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight=".25"
                android:layout_marginTop="0dp"
                app:hintTextAppearance="@style/MyHintText"
                >

                <EditText
                    android:id="@+id/edtTimeScreenOrderDetail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/colorBlack"
                    android:ems="10"
                    android:hint="Time"
                    android:inputType="textPersonName"
                    android:theme="@style/MyEditText" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llProductsListScreenOrderDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@color/colorGrayListBackground"
            android:orientation="vertical"
            >

        </LinearLayout>


    </LinearLayout>

</ScrollView>
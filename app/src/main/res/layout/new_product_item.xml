<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayoutRootProductItemCell"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:clipChildren="true"
    android:elevation="8dp"
    android:padding="0dp">

    <ImageView
        android:id="@+id/imgGridCellImage"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:contentDescription="@string/content_description_image"
        android:minWidth="130dp"
        android:scaleType="centerInside"
        android:src="@drawable/bottle1" />

    <TextView
        android:id="@+id/txtGridCellTitle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/imgGridCellImage"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:gravity="left"
        android:maxLines="2"
        android:text="PRODUCT oewhjl wkdlw;k efwl;kekejfl kwjelfkwjel kfjwlkej lwkjel kwjeklfwjelfk wjelkf jwlekjfwlkej lljk clajdaksdj kadjsh kaejdh kqjewhadfk jdhs kajh"
        android:textSize="15sp" />

    <LinearLayout
        android:id="@+id/linearLayoutPricesGridCell"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtGridCellTitle"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:minHeight="0dp"
        android:orientation="vertical"
        android:paddingBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtGridCellPriceOld"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:text="10.00"
                android:maxLines="1"
                android:textColor="@color/colorGray"
                android:textSize="10sp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/txtGridCellPriceOldText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center|left"
                android:maxLines="1"
                android:text="@string/price_in_airport"
                android:textColor="@color/colorGray"
                android:textSize="10sp"
                android:textStyle="normal" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txtGridCellPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:maxLines="1"
                android:text="10.00"
                android:textSize="10sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtGridCellPriceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:gravity="center|left"
                android:maxLines="1"
                android:text="@string/price_in_mydutyfree"
                android:textSize="10sp"
                android:textStyle="normal" />

        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/imgBtnWishListGridCellImage"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:background="@color/colorTransparent"
        android:padding="5dp"
        android:scaleType="centerInside"
        android:src="@drawable/icon_favorite_yellow_filled" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialogRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <HorizontalScrollView
        android:id="@+id/scrollViewDialogTutorial"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/btnNextDialogTutorial"
        android:scrollbars="none"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <RelativeLayout
                android:id="@+id/relativeLayout1DialogTutorial"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                >
                <ImageView
                    android:id="@+id/imgTip1DialogTutorial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/cart"
                    />
                <TextView
                    android:id="@+id/txtTip1DialogTutorial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="50dp"
                    android:gravity="center"
                    android:layout_below="@id/imgTip1DialogTutorial"
                    android:text="@string/tip_one_black"
                    android:textSize="14sp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relativeLayout2DialogTutorial"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                >
                <ImageView
                    android:id="@+id/imgTip2DialogTutorial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/savings"
                    />
                <TextView
                    android:id="@+id/txtTip2DialogTutorial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="50dp"
                    android:gravity="center"
                    android:layout_below="@id/imgTip2DialogTutorial"
                    android:text="@string/tip_one_black"
                    android:textSize="14sp"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/relativeLayout3DialogTutorial"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite"
                >
                <ImageView
                    android:id="@+id/imgTip3DialogTutorial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/map"
                    />
                <TextView
                    android:id="@+id/txtTip3DialogTutorial"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="50dp"
                    android:paddingLeft="50dp"
                    android:paddingRight="50dp"
                    android:gravity="center"
                    android:layout_below="@id/imgTip3DialogTutorial"
                    android:text="@string/tip_one_black"
                    android:textSize="14sp"
                    />
            </RelativeLayout>
        </LinearLayout>
    </HorizontalScrollView>
    <Button
        style="@style/button"
        android:id="@+id/btnNextDialogTutorial"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_margin="30dp"
        android:text="@string/next_tip_caps"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:elevation="3dp"
        />
</RelativeLayout>
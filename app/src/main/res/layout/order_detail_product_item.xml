<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/colorWhite"
    android:elevation="3dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imgImageCellProduct"
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:padding="10dp"
        android:scaleType="centerInside"
        android:src="@drawable/bottle4" />

    <RelativeLayout
        android:id="@+id/contentLayoutCellProduct"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/txtTitleCellProduct"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/txtQuantityCellProduct"
            android:ellipsize="marquee"
            android:maxLines="3"
            android:text="Large Text"
            android:textColor="@color/colorGray"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/txtQuantityCellProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/txtPriceCellProduct"
            android:text="2"
            android:textColor="@color/colorGray"
            android:textSize="16sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/txtPriceCellProduct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:minWidth="80dp"
            android:text="100.00 $"
            android:textColor="@color/colorGray"
            android:textSize="16sp"
            android:textStyle="bold" />


    </RelativeLayout>
</LinearLayout>